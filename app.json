{
  "expo": {
    "name": "rangu-front-expo",
    "slug": "rangu-front-expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ranguicon_Prancheta_1.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#D7233C"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to access your camera",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/ranguimagem_Prancheta_1.png",
        "backgroundColor": "#D7233C"
      },
      "permissions": [
        "android.permission.NFC",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/images/ranguimagem_Prancheta_1.png"
    },
    "plugins": [
      "react-native-nfc-manager",
      "expo-barcode-scanner",
      "expo-image-picker"
    ]
  }
}
